<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    tools:background="@android:color/holo_orange_dark">

    <Space
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentTop="true" />


    <com.nethergrim.vk.views.imageViews.UserImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/chat.row.avatar.size"
        android:layout_height="@dimen/chat.row.avatar.size"
        android:layout_below="@+id/top"
        android:layout_marginLeft="@dimen/chat.row.margins"
        android:layout_marginStart="@dimen/chat.row.margins"
        tools:background="@drawable/green_dot" />


    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avatar"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/avatar"
        android:layout_toRightOf="@+id/avatar"
        android:background="@drawable/rounded_background_primary"
        android:minHeight="@dimen/chat.row.avatar.size"
        android:orientation="vertical"
        android:padding="6dp">


        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/textBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="220dp"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:typeface="roboto_regular"
            tools:text="f asdf asd fsad f asfas fa sdf s" />


    </LinearLayout>


    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/textDate"
        android:layout_width="@dimen/chat.row.date_text_width"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/content_layout"
        android:layout_toRightOf="@+id/content_layout"
        android:gravity="bottom|left"
        android:padding="4dp"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"
        app:typeface="roboto_thin"
        tools:text="Hi there" />


    <ImageView
        android:id="@+id/avatar_overlay"
        android:layout_width="@dimen/chat.row.avatar.size"
        android:layout_height="@dimen/chat.row.avatar.size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/chat.row.margins"
        android:src="@drawable/ic_navigation_check" />


</RelativeLayout>