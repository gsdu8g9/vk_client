<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/conversation_item_height"
    android:paddingRight="@dimen/conversation_item_padding_horizontal"
    android:paddingTop="@dimen/conversation_item_padding_vertical">


    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="@dimen/conversation_avatar_size"
        android:layout_height="@dimen/conversation_avatar_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/conversation_item_padding_horizontal"
        android:layout_marginLeft="@dimen/conversation_item_padding_horizontal"
        android:layout_marginRight="@dimen/conversation_item_padding_horizontal"
        android:contentDescription="@string/user_avatar"
        tools:background="@android:color/holo_blue_light" />

    <View
        android:id="@+id/online_indicator"
        android:layout_width="@dimen/conversation_item_online_indicator"
        android:layout_height="@dimen/conversation_item_online_indicator"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:background="@drawable/green_dot" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_avatar"
        android:layout_toLeftOf="@+id/text_date"
        android:layout_toRightOf="@+id/image_avatar"
        android:layout_toStartOf="@+id/text_date"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/text_size_big"
        app:typeface="roboto_regular"
        tools:text="Steve Jobs" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/text_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_name"
        android:layout_marginTop="@dimen/conversation_item_text_secondary_margin_top"
        android:layout_toEndOf="@+id/image_avatar"
        android:layout_toRightOf="@+id/image_avatar"
        android:ellipsize="end"
        android:maxLines="@integer/conversation_item_max_message_lines"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_size_small"
        app:typeface="roboto_light"
        tools:text="Hi! I'm proud of you! You're making really cool apps! Hi! I'm proud of you! You're making really cool apps! Hi! I'm proud of you! You're making really cool apps! Hi! I'm proud of you! You're making really cool apps! Hi! I'm proud of you! You're making really cool apps! Hi! I'm proud of you! You're making really cool apps! Hi! I'm proud of you! You're making really cool apps! " />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@+id/imageViewDetails"
        android:layout_toStartOf="@+id/imageViewDetails"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_size_small"
        app:typeface="roboto_light"
        tools:text="Yesterday" />

    <ImageView
        android:id="@+id/imageViewDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_details"
        android:layout_toEndOf="@+id/text_details"
        android:layout_toRightOf="@+id/text_details" />

</RelativeLayout>