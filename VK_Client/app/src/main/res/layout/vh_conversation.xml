<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/conversation_item_height"
    android:paddingLeft="@dimen/conversation_item_padding_horizontal"
    android:paddingRight="@dimen/conversation_item_padding_horizontal"
    android:paddingTop="@dimen/conversation_item_padding_vertical">


    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="@dimen/conversation_avatar_size"
        android:layout_height="@dimen/conversation_avatar_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/conversation_item_padding_horizontal"
        android:layout_marginRight="@dimen/conversation_item_padding_horizontal"
        android:contentDescription="@string/user_avatar"
        tools:background="@android:color/holo_blue_light" />

    <View
        android:id="@+id/online_indicator"
        android:layout_width="@dimen/conversation_item_online_indicator"
        android:layout_height="@dimen/conversation_item_online_indicator"
        android:layout_alignEnd="@+id/image_avatar"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/image_avatar"
        android:background="@drawable/green_dot" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_avatar"
        android:layout_toLeftOf="@+id/text_date"
        android:layout_toRightOf="@+id/image_avatar"
        android:layout_toStartOf="@+id/text_date"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/text_size_big"
        tools:text="Steve Jobs" />

    <TextView
        android:id="@+id/text_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_name"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_toEndOf="@+id/image_avatar"
        android:layout_toRightOf="@+id/image_avatar"
        android:ellipsize="end"
        android:maxLines="@integer/conversation_item_max_message_lines"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_size_small"
        tools:text="Hi! I'm proud of you! You're making really cool apps!" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_size_small"
        tools:text="Yesterday" />

</RelativeLayout>