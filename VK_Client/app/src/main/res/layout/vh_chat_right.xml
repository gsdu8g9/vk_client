<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@android:color/darker_gray">

    <Space
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_alignParentTop="true" />


    <com.nethergrim.vk.views.imageViews.UserImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/chat.row.avatar.size"
        android:layout_height="@dimen/chat.row.avatar.size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/top"
        android:layout_marginEnd="@dimen/chat.row.margins"
        android:layout_marginRight="@dimen/chat.row.margins"
        android:layout_marginTop="@dimen/chat.row.margin_vertical"
        tools:background="@drawable/green_dot" />

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avatar"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/avatar"
        android:background="@drawable/rounded_background_white"
        android:minHeight="@dimen/chat.row.avatar.size"
        android:orientation="vertical"
        android:padding="8dp">


        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/textBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="220dp"
            android:textColor="@color/primary_text"
            app:typeface="roboto_medium"
            tools:text="Text here" />


    </LinearLayout>

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/textDate"
        android:layout_width="@dimen/chat.row.date_text_width"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/content_layout"
        android:layout_alignTop="@id/content_layout"
        android:layout_toLeftOf="@+id/content_layout"
        android:gravity="center|right"
        android:padding="4dp"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"
        app:typeface="roboto_light"
        tools:text="Hi " />


</RelativeLayout>