<?xml version="1.0" encoding="utf-8"?>

<com.balysv.materialripple.MaterialRippleLayout
    android:id="@+id/ripple"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@android:color/darker_gray">

        <Space
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentTop="true" />


        <com.nethergrim.vk.views.imageViews.UserImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/chat.row.avatar.size"
            android:layout_height="@dimen/chat.row.avatar.size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/top"
            android:layout_marginEnd="@dimen/chat.row.margins"
            android:layout_marginRight="@dimen/chat.row.margins"
            tools:background="@drawable/green_dot" />


        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/avatar"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/avatar"
            android:background="@drawable/rounded_background_white"
            android:minHeight="@dimen/chat.row.avatar.size"
            android:orientation="vertical"
            android:padding="6dp">


            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/textBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="220dp"
                android:textColor="@color/primary_text"
                android:textSize="15sp"
                app:typeface="roboto_regular"
                tools:text="Text here" />


        </LinearLayout>


        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/textDate"
            android:layout_width="@dimen/chat.row.date_text_width"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/content_layout"
            android:layout_alignTop="@id/content_layout"
            android:layout_toLeftOf="@+id/content_layout"
            android:gravity="bottom|right"
            android:padding="4dp"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            app:typeface="roboto_thin"
            tools:text="Hi " />

        <Space
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/content_layout" />

        <ImageView
            android:id="@+id/avatar_overlay"
            android:layout_width="@dimen/chat.row.avatar.size"
            android:layout_height="@dimen/chat.row.avatar.size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/chat.row.margins"
            android:layout_marginStart="@dimen/chat.row.margins"
            android:src="@drawable/ic_navigation_check" />


    </RelativeLayout>

</com.balysv.materialripple.MaterialRippleLayout>